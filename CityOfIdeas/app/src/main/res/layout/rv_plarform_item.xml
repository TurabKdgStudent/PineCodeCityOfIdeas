<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="180dp"
                                                   android:background="@drawable/platform_item_shape"
                                                   android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/pinecodelogo2"
            android:id="@+id/platformLogo"
            android:adjustViewBounds="false"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="3dp"
            android:foregroundGravity="fill_horizontal|top" android:layout_gravity="center|center_horizontal|top"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/platformExpl" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/platformtitle" tools:text="Fenerbahce Beko"
            android:textColor="@android:color/white" android:textSize="18sp"
            android:textStyle="bold" android:textAllCaps="false"
            android:textAlignment="viewStart" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline17" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/platformExpl"
            tools:text="Dit is het platform van Stad-Antwerpen. Alles wat georganiseerd wordt door stad antwerpen komt samen bij de verschillende projecten die deze stad uitvoert."
            android:textColor="@android:color/white" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/platformtitle"
            app:layout_constraintStart_toStartOf="@+id/platformtitle" android:layout_marginEnd="8dp"
            android:typeface="normal" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline17" app:layout_constraintGuide_begin="100dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>
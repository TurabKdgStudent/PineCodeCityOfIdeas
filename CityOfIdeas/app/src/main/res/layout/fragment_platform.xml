<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".drawer.PlatformFragment"
                                                   android:id="@+id/constraintLayout">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/platformRv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choosePlatform" android:layout_marginTop="64dp"/>
    <TextView
            android:text="@string/kies_een_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choosePlatform" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="30sp"
            android:textColor="@android:color/white" android:textStyle="bold"
            android:fontFamily="sans-serif-black" android:typeface="sans"/>
</androidx.constraintlayout.widget.ConstraintLayout>